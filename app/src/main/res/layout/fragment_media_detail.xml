<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:media="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/media_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/media_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.start.view.IGMediaView
                    android:id="@+id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    media:media_type="image"/>
                <com.start.view.IGMediaView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    media:media_type="video"/>
            </FrameLayout>
            <RelativeLayout
                android:id="@+id/message_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="10dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/head_portrait"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    fresco:roundedCornerRadius="20dp"
                    />
                <LinearLayout
                    android:id="@+id/user_name_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toRightOf="@id/head_portrait">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:lines="1"
                            android:ellipsize="end"
                            android:layout_gravity="center_vertical"/>
                        <LinearLayout
                            android:id="@+id/location_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone">
                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/ic_place_black_18dp"/>
                            <TextView
                                android:id="@+id/location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorBlack"
                                android:textSize="12sp"
                                android:lines="1"
                                android:ellipsize="end"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/head_portrait"
                    android:layout_below="@id/user_name_layout"
                    android:textColor="@color/colorGray"
                    android:textSize="13sp"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorGray"
                    android:textSize="12sp"
                    android:lines="1"
                    android:gravity="center_vertical"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text"
                    android:layout_toRightOf="@id/head_portrait"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:padding="1dp"
                        android:src="@drawable/ic_favorite_black_18dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/like_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:lines="1"
                        android:gravity="left"
                        android:layout_weight="0.5"/>
                    <TextView
                        android:id="@+id/comment_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:lines="1"
                        android:gravity="right"
                        android:layout_weight="0.5" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
    <fragment
        android:tag="fragment_user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.start.fragment.UserListFragment"/>
    <fragment
        android:tag="fragment_comment_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.start.fragment.CommentListFragment"/>
</FrameLayout>